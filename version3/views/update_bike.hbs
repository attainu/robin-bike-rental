<div class="container">
  <form action="/bikes/update/{{bikeid}}" method="POST" enctype="multipart/form-data">
    <label for="bikename">Bike Name</label>
    <input type="text" id="bikename" name="bikename" placeholder="{{bikes.bikename}}">

    <label for="modelyear">Model Year</label>
    <input type="text" id="modelyear" name="lastname" placeholder="{{bikes.modelyear}}">

    <label for="tramsmission">Tramsmission</label>
    <input type="text" id="transmission" name="transmission" placeholder="{{bikes.transmission}}">
    
    <label for="price">Price</label>
    <input type="text" id="price" name="price" placeholder="{{bikes.price}}">

    <label for="city">City</label>
    <input type="text" id="city" name="city" placeholder="{{bikes.city}}">

    <label for="bikeimage">Bike Image</label>
    <input type="file" id="myFile" name="filename">

    
    <input type="submit" value="Submit">
  </form>